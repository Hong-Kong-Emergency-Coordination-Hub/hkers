# HKERS Application Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# =============================================================================
# Auth0 Configuration (REQUIRED for authentication)
# =============================================================================
# Get these values from your Auth0 dashboard:
# https://manage.auth0.com/
AUTH0_DOMAIN=''
AUTH0_CLIENT_ID=''
AUTH0_CLIENT_SECRET=''
AUTH0_CALLBACK_URL='http://localhost:3000/auth/callback'

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
POSTGRES_USER=pguser
POSTGRES_PASSWORD=pgpw
POSTGRES_DB=pgdb
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispw
REDIS_DB=0

# =============================================================================
# Session Configuration
# =============================================================================
# Generate a strong secret for session encryption
# Run: ./scripts/generate-secret.sh (uses openssl rand -base64 32)
SESSION_SECRET=

# =============================================================================
# Application Environment
# =============================================================================
# Options: debug, release, test
GIN_MODE=release
TZ=UTC

# =============================================================================
# Optional: Development/Testing
# =============================================================================
# Uncomment for development
# GIN_MODE=debug

